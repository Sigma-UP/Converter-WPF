<Window x:Class="Converter_WPF.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Converter_WPF"
		mc:Ignorable="d"
		Title="MainWindow" Height="165.333" Width="800">
        <Grid Margin="0,0,0,-5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Конвертировать из -->
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="DarkGray" Margin="10,10,5,14">
            <StackPanel>
                <TextBlock Margin ="20 15 10 0" Text="У меня есть" FontSize="15" FontWeight="Light"></TextBlock>

                <Grid Margin="20 10 20 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox BorderThickness="0" Grid.Column="0" Height="30" FontSize="20" Text="100" FontWeight="Bold"></TextBox>
                    <ComboBox Name="cBox_availableCurrencies" BorderBrush="Red" Grid.Column="1"></ComboBox>
                </Grid>

                <TextBlock Margin="20 10 20 0" Text="1 originCurr = x currentCurr"></TextBlock>
            </StackPanel>
        </Border>
       
        <!-- Конвертировать в -->
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray" Margin="5,10,10,14">
            <StackPanel>
                <TextBlock Margin ="20 15 10 0" Text="Я получу" FontSize="15" FontWeight="Light"></TextBlock>

                <Grid Margin="20 10 20 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox BorderThickness="0" Grid.Column="0" Height="30" FontSize="20" Text="100" FontWeight="Bold" IsReadOnly="True"></TextBox>
                    <ComboBox BorderBrush="Red" Grid.Column="1"></ComboBox>
                </Grid>

                <TextBlock Margin="20 10 20 0" Text="1 currentCurr = x originCurr"></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
